<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- HeadLine -->
    <style name="TextAppearance.NotoSans" parent="">
        <item name="fontFamily">@font/noto_sans_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineHeight">23dp</item>
        <item name="android:letterSpacing">-2</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.NotoSans.Title1">
        <item name="android:lineHeight">24sp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.NotoSans.Title2">
        <item name="android:lineHeight">18sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.NotoSans.SubHead">
        <item name="fontFamily">@font/noto_sans_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">#999999</item>
        <item name="android:lineHeight">18sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.NotoSans.Body1">
        <item name="android:lineHeight">15sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.NotoSans.Body2">
        <item name="fontFamily">@font/noto_sans_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:lineHeight">16sp</item>
        <item name="android:letterSpacing">-1</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="TextAppearance.NotoSans.Caption1">
        <item name="fontFamily">@font/noto_sans_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/g_600</item>
        <item name="android:lineHeight">15sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.NotoSans.Caption2">
        <item name="fontFamily">@font/noto_sans_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/g_600</item>
        <item name="android:lineHeight">13sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextAppearance.NotoSans.Caption3">
        <item name="fontFamily">@font/noto_sans_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">#7F7F7F</item>
        <item name="android:lineHeight">10sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">8sp</item>
    </style>

    <style name="TextAppearance.NotoSans.Caption4">
        <item name="fontFamily">@font/noto_sans_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">#7F7F7F</item>
        <item name="android:lineHeight">11sp</item>
        <item name="android:letterSpacing">-4</item>
        <item name="android:textSize">9sp</item>
    </style>

    <style name="TextAppearance.NotoSans.Button1">
        <item name="fontFamily">@font/noto_sans_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">#7F7F7F</item>
        <item name="android:lineHeight">15sp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.NotoSans.Button2">
        <item name="fontFamily">@font/noto_sans_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:lineHeight">13sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">10sp</item>
    </style>


    <!-- Roboto1 -->
    <style name="TextAppearance.Roboto" parent="">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">@color/g_600</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineHeight">21sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Roboto.Roboto2">
        <item name="android:lineHeight">18sp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Roboto.Roboto3">
        <item name="android:lineHeight">13sp</item>
        <item name="android:textSize">10sp</item>
    </style>

