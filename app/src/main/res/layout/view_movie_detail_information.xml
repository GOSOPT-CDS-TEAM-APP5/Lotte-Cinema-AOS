<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="862dp">


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="130dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:text="가디언즈 오브 갤럭시:\nVolume 3"
            android:textColor="@color/black"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="액션/미국"
            app:layout_constraintStart_toStartOf="@id/tv_title"
            app:layout_constraintTop_toBottomOf="@id/tv_title" />

        <TextView
            android:id="@+id/tv_openSchedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="2023.05.03 개봉"
            app:layout_constraintStart_toStartOf="@id/tv_title"
            app:layout_constraintTop_toBottomOf="@id/tv_genre" />

        <TextView
            android:id="@+id/tv_runningTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="116dp"
            android:text="150분"
            app:layout_constraintStart_toEndOf="@id/tv_openSchedule"
            app:layout_constraintTop_toTopOf="@id/tv_openSchedule" />

        <GridLayout
            android:id="@+id/gl_img_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:columnCount="4"
            android:orientation="horizontal"
            android:rowCount="2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_runningTime">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginStart="18dp"
                android:background="@drawable/rectangle_style"
                android:src="@drawable/img_icon_charlotte" />


            <ImageView
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginStart="6dp"
                android:background="@drawable/rectangle_style"
                android:src="@drawable/img_icon_splex" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginStart="6dp"
                android:background="@drawable/rectangle_style"
                android:src="@drawable/img_icon_supers"

                />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="19dp"
                android:background="@drawable/rectangle_style"
                android:src="@drawable/img_icon_super4d"

                />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginStart="18dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/rectangle_style"
                android:src="@drawable/img_icon_colorium" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginStart="6dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/rectangle_style"
                android:src="@drawable/img_icon_cinecomfort" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginStart="6dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/rectangle_style"
                android:src="@drawable/img_icon_cinefamily" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginStart="6dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="19dp"
                android:background="@drawable/rectangle_style"
                android:src="@drawable/img_icon_cinecouple" />

        </GridLayout>

        <GridLayout
            android:id="@+id/gl_tv_information"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:layout_marginTop="20dp"
            android:background="@color/sub_1"
            android:columnCount="6"
            android:orientation="horizontal"
            android:rowCount="3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/gl_img_icon">

            <TextView
                android:id="@+id/tv_rating"
                android:layout_columnSpan="2"
                android:layout_marginStart="48dp"
                android:layout_marginTop="16dp"
                android:text="관람객 평점"
                android:textColor="@color/g_200"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/tv_reservation"
                android:layout_columnSpan="2"
                android:layout_marginStart="61dp"
                android:layout_marginTop="16dp"
                android:text="예매율 1위"
                android:textColor="@color/g_200"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/tv_audience"
                android:layout_marginStart="61dp"
                android:layout_marginTop="16dp"
                android:text="누적 관객수"
                android:textColor="@color/g_200"
                android:textSize="10dp" />

            <ImageView
                android:id="@+id/iv_ratingStar"
                android:layout_width="13dp"
                android:layout_height="12dp"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/img_icon_ratingstar" />

            <TextView
                android:id="@+id/tv_numRating"
                android:layout_marginStart="3dp"
                android:layout_marginTop="6dp"
                android:text="9.6"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_numReservation"
                android:layout_marginStart="68dp"
                android:layout_marginTop="6dp"
                android:text="37.2"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_percent"
                android:layout_marginStart="2dp"
                android:layout_marginTop="8dp"
                android:text="%"
                android:textColor="@color/g_100"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/tv_numAudience"
                android:layout_marginStart="45dp"
                android:layout_marginTop="6dp"
                android:text="1,630,956"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_num"
                android:layout_marginStart="2dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="30dp"
                android:text="명"
                android:textColor="@color/g_100"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_row="2"
                android:layout_columnSpan="6"
                android:layout_gravity="fill"
                android:layout_marginStart="259dp"
                android:layout_marginTop="3dp"
                android:text="(2023.05.08 기준)"
                android:textColor="@color/g_200"
                android:textSize="8dp" />

        </GridLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="영화정보"
            android:textSize="12dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/gl_tv_information"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="76dp"
            android:layout_marginEnd="239dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="평점 및 관람평"
            android:textSize="12dp"
            android:textColor="@color/g_200"
            app:layout_constraintTop_toBottomOf="@id/gl_tv_information"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="210dp"
            android:layout_marginEnd="78dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(1,642)"
            android:textSize="10dp"
            android:textColor="@color/g_200"
            app:layout_constraintTop_toBottomOf="@id/gl_tv_information"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="18dp"
            android:layout_marginStart="282dp"
            android:layout_marginEnd="46dp"
            />

        <View
            android:layout_width="164dp"
            android:layout_height="2dp"
            android:background="@color/black"
            app:layout_constraintTop_toBottomOf="@id/gl_tv_information"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="42dp"
            android:layout_marginStart="16dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/g_200"
            app:layout_constraintTop_toBottomOf="@id/gl_tv_information"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="42dp"
            />

        <ImageView
            android:id="@+id/img_audienceGraph"
            android:layout_width="match_parent"
            android:layout_height="91dp"
            android:src="@drawable/img_audiencegraph"
            app:layout_constraintTop_toBottomOf="@id/gl_tv_information"
            android:layout_marginTop="53dp"
            />

        <TextView
            android:id="@+id/tv_synopsys"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시놉시스"
            android:textColor="@color/black"
            android:textSize="14dp"
            app:layout_constraintTop_toBottomOf="@id/img_audienceGraph"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="293dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="펼쳐보기"
            android:textColor="@color/black"
            android:textSize="10dp"
            app:layout_constraintTop_toBottomOf="@id/img_audienceGraph"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="37dp"
            android:layout_marginStart="289dp"
            android:layout_marginEnd="34dp"
            />

        <ImageView
            android:layout_width="9dp"
            android:layout_height="4dp"
            android:src="@drawable/img_icon_vector"
            app:layout_constraintTop_toBottomOf="@id/img_audienceGraph"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="42dp"
            android:layout_marginStart="330dp"
            android:layout_marginEnd="20dp"
            />

        <TextView
            android:id="@+id/tv_explanation"
            android:layout_width="328dp"
            android:layout_height="53dp"
            android:text="‘가모라'를 잃고 슬픔에 빠져 있던 ‘피터 퀼'이 위기에 처한 은하계와 동료를 지키기 위해 다시 한번 가디언즈 팀과 힘을 모으고, 성공하지 못할 경우 그들의 마지막이 될지도 모르는 미션에 나서는 이야기"
            android:textColor="@color/g_400"
            android:textSize="11dp"
            app:layout_constraintTop_toBottomOf="@id/tv_synopsys"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            />

        <TextView
            android:id="@+id/tv_cast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="감독 및 출연"
            android:textSize="14dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/tv_explanation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="274dp"
            />

        <GridLayout
            android:id="@+id/gl_castingList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="3"
            android:columnCount="5"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/tv_cast"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="16dp"
            >

            <ImageView
                android:id="@+id/img_cast1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/img_cast1"
                />

            <TextView
                android:id="@+id/tv_cast1"
                android:text="제임스 건"
                android:textSize="12dp"
                android:textColor="@color/g_600"
                />

            <TextView
                android:text="감독"
                android:textSize="10dp"
                android:textColor="@color/g_200"
                android:layout_gravity="center"
                />

            <ImageView
                android:id="@+id/img_cast2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/img_cast2"
                android:layout_marginStart="12dp"
                />

            <TextView
                android:id="@+id/tv_cast2"
                android:text="크리스 프랫"
                android:textSize="12dp"
                android:textColor="@color/g_600"
                android:layout_marginStart="12dp"
                />

            <ImageView
                android:id="@+id/img_cast3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_row="0"
                android:src="@drawable/img_cast3"
                android:layout_marginStart="12dp"
                />

            <TextView
                android:id="@+id/tv_cast3"
                android:text="조 샐다나"
                android:textSize="12dp"
                android:textColor="@color/g_600"
                android:layout_marginStart="12dp"
                />

            <ImageView
                android:id="@+id/img_cast4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_row="0"
                android:src="@drawable/img_cast4"
                android:layout_marginStart="12dp"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/tv_cast4"
                android:text="데이브 바티스타"
                android:textSize="12dp"
                android:textColor="@color/g_600"
                android:layout_marginStart="12dp"
                android:gravity="center"
                />

            <ImageView
                android:id="@+id/img_cast5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_row="0"
                android:src="@drawable/img_cast5"
                android:layout_marginStart="12dp"
                />

            <TextView
                android:id="@+id/tv_cast5"
                android:text="카렌 길런"
                android:textSize="12dp"
                android:textColor="@color/g_600"
                android:layout_marginStart="12dp"
                />
        </GridLayout>

        <ImageView
            android:id="@+id/iv_banner"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/img_banner"
            app:layout_constraintTop_toBottomOf="@id/gl_castingList"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="39dp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>