<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="206dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="158dp"
            android:src="@drawable/img_home_movie_chart_ad"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="5dp">
            <TextView
                android:id="@+id/tv_ad_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="스트리머"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_heart"
                app:layout_constraintBottom_toBottomOf="@id/tv_ad_title"
                android:layout_marginStart="4dp"
                app:layout_constraintStart_toEndOf="@id/tv_ad_title"
                app:layout_constraintTop_toTopOf="@id/tv_ad_title"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/tv_ad_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="박스오피스 다음  순위는 ?"
            android:textColor="@color/g_200"
            android:textSize="10sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>