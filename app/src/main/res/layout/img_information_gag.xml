<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >


        <ImageView
            android:id="@+id/iv_big_teaser"
            android:layout_width="360dp"
            android:layout_height="150dp"
            android:src="@drawable/img_big_teaser"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="98dp"
            android:layout_height="138dp"
            android:src="@drawable/img_front_gog_poster"
            app:layout_constraintTop_toTopOf="@id/iv_big_teaser"
            app:layout_constraintStart_toStartOf="@id/iv_big_teaser"
            app:layout_constraintEnd_toEndOf="@id/iv_big_teaser"
            android:layout_marginTop="120dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="246dp"

            />


        <include
            android:id="@+id/content_information"
            layout="@layout/content_information_gag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/iv_big_teaser"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>