<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".presentation.detail.MovieDetailActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/layout_appbar"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@color/black"
        app:layout_scrollFlags="scroll|enterAlways"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가디언즈 오브 갤럭시.."
            android:textSize="14dp"
            android:textColor="@color/gray_white"
            android:layout_gravity="center"
            />

    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/iv_big_teaser"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/img_big_teaser"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_appbar"
        />

    <ImageView
        android:layout_width="98dp"
        android:layout_height="138dp"
        android:src="@drawable/img_front_gog_poster"
        app:layout_constraintTop_toTopOf="@id/iv_big_teaser"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="120dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="246dp"
        />


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/view_fragment_movie_detail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/view_fragment_movie_detail_trailer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_big_teaser"
        tools:layout="@layout/fragment_movie_detail" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/view_fragment_movie_detail_trailer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/view_fragment_movie_detail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="12dp"
        tools:layout="@layout/fragment_movie_detail_trailer"
        />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:shadowRadius="24"
        android:text="예매하기"
        app:layout_constraintTop_toBottomOf="@id/layout_appbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="612dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
       />

</androidx.constraintlayout.widget.ConstraintLayout>